            </div
<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4 text-center">
			<div class="search-box">
                <form class="form-horizontal" method="post" action="Check">
                    <fieldset>

                        <!-- Form Name -->
                        <legend>Lgoin Form</legend>

                        <div class="form-group">
                            <label class="col-md-12 control-label notification3" for="fname">@TempData["message3"]</label>
                            <label class="col-md-12 control-label notification4" for="fname">@TempData["message4"]</label>   
                        </div>

                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="email">Email :</label>  
                            <div class="col-md-4">
                            <input id="email" name="email" type="email" placeholder="example@example.com" class="form-control input-md" required="">
    
                            </div>
                        </div>

                        <!-- Password input-->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="password">Password :</label>
                            <div class="col-md-4">
                            <input id="password" name="password" type="password" placeholder="**********" class="form-control input-md" required="">
    
                            </div>
                        </div>

                        <!-- Button (Double) -->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="save"></label>
                            <div class="col-md-8 reg_button">
                            <button id="save" name="save" class="btn btn-success">Login</button>
                            <button id="clear" name="clear" class="btn btn-danger" onclick="location.href='@Url.Action("Login", "Login")';return false;">Reset</button>
                            <button id="register" class="btn btn-success" onclick="location.href='@Url.Action("Register", "Login")';return false;">Create Account</button>
                            </div>
                        </div>

                    </fieldset>
                </form>


