@model Hospital_Management_System.Models.AccountModels

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html >
<head>
    <meta charset="UTF-8">
    <title></title>
    <link rel="stylesheet" href="~/Content/css/style.css">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />


</head>

<body>
    <div id="wrap">
        <div id="regbar">
            <div id="navthing">
                <span>Hospital Management System</span>
                <h2><a href="@Url.Action("Home", "Login", new { id = "" })" id="loginform">Home</a> | <a href="@Url.Action("Register", "Login", new { id = "" })">Register</a></h2>
            </div>
            <div class="container">
	            <div class="row">
		            <div class="col-md-4 col-md-offset-4 text-center">
			            <div class="search-box">
                            <form class="form-horizontal" method="post" action="Register">
                                <fieldset>

                                    <!-- Form Name -->
                                    <legend>Register Form</legend>

                                    <div class="form-group">
                                        <label class="col-md-12 control-label notification" for="fname">@TempData["message"]</label>
                                        <label class="col-md-12 control-label notification2" for="fname">@TempData["message2"]</label>   
                                    </div>

                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="fname">First Name :</label>  
                                        <div class="col-md-4">
                                            <input id="fname" name="fname" type="text" placeholder="First Name" class="form-control input-md" required="">
                                        </div>
                                    </div>

                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="fname">Middle Name :</label>  
                                        <div class="col-md-4">
                                            <input id="mname" name="mname" type="text" placeholder="Middle Name" class="form-control input-md" required="">
                                        </div>
                                    </div>

                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="lname">Last Name :</label>  
                                        <div class="col-md-4">
                                        <input id="lname" name="lname" type="text" placeholder="Last Name" class="form-control input-md" required="">
    
                                        </div>
                                    </div>

                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="lname">Email :</label>  
                                        <div class="col-md-4">
                                        <input id="email" name="email" type="email" placeholder="exemple@gmail.com" class="form-control input-md" required="">
                                        </div>
                                    </div>

                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="email">Phone Number :</label>  
                                        <div class="col-md-4">
                                        <input id="phone" name="phone_no" type="text" placeholder="+8801XXXXXXXXX" class="form-control input-md" required="">
    
                                        </div>
                                    </div>

                                    <!-- Password input-->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="password">Password :</label>
                                        <div class="col-md-4">
                                        <input id="password" name="password" type="password" placeholder="" class="form-control input-md" required="">
    
                                        </div>
                                    </div>

                                    <!-- Password input-->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="password">Confirm Password :</label>
                                        <div class="col-md-4">
                                        <input id="cpassword" name="cpassword" type="password" placeholder="" class="form-control input-md" required="">
    
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="password">Date Of Birth :</label>
                                        <input id="exampleInputDOB1 date" name="date_of_birth" type="date" class="form-control input-md"  required="">
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="password">Address :</label>
                                        <textarea rows="2" id="comment exampleInputDOB1" name="address" placeholder="Address" class="form-control"  required=""></textarea>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="password">Gender :</label>
                                        <div class="radio" id="radio mark">
                                            <label><input id="Gender" name="Gender" type="radio" value="Male" />Male</label>
                                            <label><input id="Gender1" name="Gender" type="radio" value="Female" />Female</label>
                                            <label><input id="Gender2" name="Gender" type="radio" value="Others" disabled="disabled" />Others</label>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="blood">Blood Group :</label>
                                        <div class="radio" id="radio mark2">
                                            <label class="blood"><input name="blood" type="radio" value="A+" />A+</label>
                                            <label class="blood"><input name="blood" type="radio" value="A-" />A-</label>
                                            <label class="blood"><input name="blood" type="radio" value="B+" />B+</label>
                                            <label class="blood"><input name="blood" type="radio" value="B-" />B-</label>
                                            <label class="blood"><input name="blood" type="radio" value="AB+" />O+</label>
                                            <label class="blood"><input name="blood" type="radio" value="AB-" />O-</label>
                                            <label class="blood"><input name="blood" type="radio" value="O+" />AB+</label>
                                            <label class="blood"><input name="blood" type="radio" value="O-" />AB-</label>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="password">Account Type :</label>
                                        <select class="form-control" id="sel1 exampleInputDOB1 AccountType" name="AccountType">
                                            <option>Select Account Type</option>
                                            <option>User</option>
                                            <option>Blood_Donor</option>
                                            <option disabled="disabled">Patient</option>
                                            <option disabled="disabled">Doctor</option>
                                            <option disabled="disabled">Accountant</option>
                                            <option disabled="disabled">Admin</option>
                                        </select>
                                    </div>
                                   
                                    <!-- Button (Double) -->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="save"></label>
                                        <div class="col-md-8 reg_button">
                                        <button id="save" name="save" class="btn btn-success">Submit</button>
                                        <button id="clear" name="clear" class="btn btn-danger" onclick="location.href='@Url.Action("Register", "Login")';return false;">Reset</button>
                                        <button id="login" class="btn btn-success" onclick="location.href='@Url.Action("Login", "Login")';return false;">Back To Login</button>
                                        </div>
                                    </div>

                                </fieldset>
                            </form>


